<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bianlitransf.biz.dao.ResourcesDao">

	<sql id="allFields">
		id,
		type_cat as typeCat,
		type,
		icon_url as iconUrl,
		name,
		created_by as createdBy,
		created_time as createdTime,
		updated_by as updatedBy,
		updated_time as updatedTime
	</sql>

	<sql id="insertFields">
		id,
		type_cat,
		type,
		icon_url,
		name,
		created_by,
		created_time,
		updated_by,
		updated_time
	</sql>

	<select id="list" resultType="com.bianlitransf.biz.entity.Resources" >
		select
			<include refid="allFields" />
		from resources
		<where>
			<include refid="comnWhere" />
		</where>
		<if test="orderBy != null" >
			order by ${orderBy}
			<if test="orderByDesc != null">
				desc
			</if>
		</if>
	</select>

	<sql id="comnWhere">
		<if test="id != null">
			id = #{id}
		</if>
		<if test="typeCat != null">
			 and type_cat = #{typeCat}
		</if>
		<if test="type != null">
			 and type = #{type}
		</if>
		<if test="iconUrl != null">
			 and icon_url = #{iconUrl}
		</if>
		<if test="name != null">
			 and name = #{name}
		</if>
		<if test="createdBy != null">
			 and created_by = #{createdBy}
		</if>
		<if test="createdTime != null">
			 and created_time = #{createdTime}
		</if>
		<if test="updatedBy != null">
			 and updated_by = #{updatedBy}
		</if>
		<if test="updatedTime != null">
			 and updated_time = #{updatedTime}
		</if>
	</sql>

	<select id="getByIds" resultType="com.bianlitransf.biz.entity.Resources" >
		select <include refid="allFields" /> from resources where id in
		<foreach collection="list" item="item" open="(" separator="," close=")" >
			#{item}
		</foreach>
	</select>

	<select id="get" resultType="com.bianlitransf.biz.entity.Resources" >
		select <include refid="allFields" /> from resources where id = #{id}
	</select>

	<delete id="deleteById" parameterType="Long" >
		delete from resources where id = #{id}
	</delete>

	<insert id="insert" parameterType="com.bianlitransf.biz.entity.Resources">
		insert into resources(<include refid="insertFields" />)
		values(
			#{id},
			#{typeCat},
			#{type},
			#{iconUrl},
			#{name},
			#{createdBy},
			#{createdTime},
			#{updatedBy},
			#{updatedTime}
		)
	</insert>

	<insert id="insertBatch" parameterType="java.util.List" >
		insert into resources(<include refid="insertFields" />)
		values
		<foreach collection="list" item="item" separator="," >
			(
				#{item.id},
				#{item.typeCat},
				#{item.type},
				#{item.iconUrl},
				#{item.name},
				#{item.createdBy},
				#{item.createdTime},
				#{item.updatedBy},
				#{item.updatedTime}
			)
		</foreach>
	</insert>

	<update id="update" parameterType="com.bianlitransf.biz.entity.Resources" >
		update resources set <include refid="setComn" /> where id = #{id}
	</update>

	<sql id="setComn" >
		<if test="typeCat != null" >
			type_cat = #{typeCat},
		</if>
		<if test="type != null" >
			type = #{type},
		</if>
		<if test="iconUrl != null" >
			icon_url = #{iconUrl},
		</if>
		<if test="name != null" >
			name = #{name},
		</if>
		<if test="createdBy != null" >
			created_by = #{createdBy},
		</if>
		<if test="createdTime != null" >
			created_time = #{createdTime},
		</if>
		<if test="updatedBy != null" >
			updated_by = #{updatedBy},
		</if>
		<if test="updatedTime != null" >
			updated_time = #{updatedTime}
		</if>
	</sql>
</mapper>